{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["/**/*.ts"],   
  "ts-node": {
    "esm": true,
  }
}
